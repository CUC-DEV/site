include ../mixins/flash-messages

doctype html
html

	//- HTML HEAD
	head
		meta(charset="utf-8")
		meta(name="viewport", content="initial-scale=1.0,user-scalable=no,maximum-scale=1,width=device-width")
		
		link(rel="shortcut icon", href="/favicon.ico", type="image/x-icon")
		link(href="http://fonts.googleapis.com/icon?family=Material+Icons", rel="stylesheet")
		// style
		// 	@font-face {
		// 		url('/lib/Materialize/dist/font/material-design-icons/Material-Design-Icons.eot') format('eot'),
		// 		url('/lib/Materialize/dist/font/material-design-icons/Material-Design-Icons.ttf') format('ttf'),
		// 		url('/lib/Materialize/dist/font/material-design-icons/Material-Design-Icons.svg'') format('svg');
		// 	} 
		link(href="/lib/Materialize/dist/css/materialize.css", rel="stylesheet")

		block css
		block head

	//- HTML BODY
	body(class=section ? 'sitesection-' + section : null)
		.site-wrapper.has-sticky-footer

			//- SITE HEADER
			include ../includes/header
			
			//- SITE BODY
			block body
				main.site-body(role='main')

					block intro

					block flash-messages
						+flash-messages(messages)

					block content
						


		//- MODALS
		block modal

	//- JAVASCRIPT
	script.

	script(src='/js/lib/jquery/jquery-1.10.2.min.js')
	script(src='http://cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.min.js')
	script(src='/lib/Materialize/dist/js/materialize.js')

	if user && user.canAccessKeystone
		script(src='/keystone/js/content/editor.js')
	
	
	block js
