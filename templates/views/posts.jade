extends ../layouts/default
include ../mixins/sidemenu
include ../mixins/post
include ../mixins/pagination
include ../mixins/postmodal
block css
    link(rel='stylesheet', type='text/css', href='/styles/posts.css')
block intro
    -var defaultIntro = {content:{brief:'记录发展历程', extended:{html:'每一次成功,我们欢笑,勇攀高峰;每一次失败,我们低落,但勇往直前'}}};
    -var intro=intro||defaultIntro;
    +introduction(intro.content.brief, intro.content.extended.html)

block slogan
    h2
        | Texts, images, videos, we process everthing.

block content
    .row
        .col.s12.m12.l2#postsMenu
            - var categorie = {name:'类别', icon:'toc', id:'postCategory'};
            - var archive = {name:'归档', icon:'today', id:'postArchive'};
            - var recent = {name:'最新', icon:'whatshot', id:'postRecent'};
            +sidemenu([recent, categorie, archive])
        .col.s12.m12.l10
            -var postStyles=['post']
            +post(recents,postStyles)
        .row.right
            +pagination(null,null,postStyles)
block js
     script(type='text/javascript', src='/js/post.js')
block postmodal
    +postmodal('postModal')