mixin news(posts)
    -var defaultNews={id:'', images:[],title:'新闻标题',content:{brief:'新闻摘要', detail:'新闻正文'}, url:'/posts'};
    .row
        -var i=0, news;
        -while(i<3)
            if i < posts.length
                -news=posts[i];
            else
                -news=defaultNews;
            .col.s12.m12.l4
                .card.z-depth-4
                    .card-image
                        if news.images.length > 0
                            img.activator(src=imgPrefix + news.images[0].image.filename)
                        else
                            img.activator(src='images/home/cuc-0.jpg')
                    .card-content
                        span.card-title.activator.grey-text.text-darken-4
                            =news.title
                            i.material-icons.right more_vert
                        p
                            a(target="_blank", href=news.url) 详情
                    .card-reveal
                        span.card-title.grey-text.text-darken-4
                            =news.title
                            i.material-icons.right close
                        p=news.content.brief
            - i++